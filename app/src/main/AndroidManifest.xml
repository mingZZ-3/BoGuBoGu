<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.graduate.howtospeak">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".Practice_RDetail"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Practice_Result"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Practice_Vowel"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Practice_Consonant"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Learn_Vowel"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Learn_Consonant"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".LearnActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".PracticeActivity"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

    <!-- 접근 권한 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>