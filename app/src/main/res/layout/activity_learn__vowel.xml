<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Learn_Vowel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="543dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/learn1" />

            <ImageButton
                android:id="@+id/mtMain3"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/home" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="650dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/lvowel_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="40dp"

                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:tag="a"

                app:srcCompat="@drawable/a_bt2" />

            <ImageButton
                android:id="@+id/lvowel_eo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"

                android:tag="eo"
                app:srcCompat="@drawable/eo_bt2" />

            <ImageButton
                android:id="@+id/lvowel_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="40dp"

                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:tag="u"

                app:srcCompat="@drawable/u_bt2" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="650dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"

            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/lvowel_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="40dp"

                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:tag="o"

                app:srcCompat="@drawable/o_bt2" />

            <ImageButton
                android:id="@+id/lvowel_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:tag="i"

                app:srcCompat="@drawable/i_bt" />

            <ImageButton
                android:id="@+id/lvowel_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="11dp"

                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:tag="e"

                app:srcCompat="@drawable/e_bt2" />


        </FrameLayout>

    </LinearLayout>

</LinearLayout>