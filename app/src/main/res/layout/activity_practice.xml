<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".PracticeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/practice1" />

            <ImageButton
                android:id="@+id/btn_convert"
                android:layout_width="75dp"
                android:layout_height="match_parent"

                android:layout_gravity="left"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"

                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bt_camerachange" />

            <ImageButton
                android:id="@+id/mtPractice_vowel"
                android:layout_width="49dp"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"

                android:layout_margin="5dp"
                app:srcCompat="@drawable/bt_back" />

            <ImageButton
                android:id="@+id/mtMain1"
                android:layout_width="53dp"
                android:layout_height="match_parent"

                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"

                android:layout_margin="5dp"
                app:srcCompat="@drawable/home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/learning_View"
                android:layout_width="321dp"
                android:layout_height="230dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"

                android:text="학습 영상 영역"
                android:textColor="#FF000000"
                android:textSize="30sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="horizontal">

                <SurfaceView
                    android:id="@+id/camera_preview"
                    android:layout_width="380dp"
                    android:layout_height="230dp"
                    android:layout_gravity="right"

                    android:layout_marginRight="10dp" />

            </FrameLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <ProgressBar
                android:id="@+id/amplitudelevel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_weight="1" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <ImageButton
                    android:id="@+id/bt_rstart"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"

                    app:srcCompat="@drawable/practicestart" />

                <ImageButton
                    android:id="@+id/bt_rstop"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"

                    app:srcCompat="@drawable/practicecomplete" />

                <ImageButton
                    android:id="@+id/mtResult1"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"

                    app:srcCompat="@drawable/result" />
            </TableRow>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>