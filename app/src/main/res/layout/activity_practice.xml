<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PracticeActivity"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="571dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/practice1" />

            <ImageButton
                android:id="@+id/mtPractice_vowel"
                android:layout_width="49dp"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"

                android:layout_margin="5dp"
                app:srcCompat="@drawable/bt_back" />

            <ImageButton
                android:id="@+id/mtMain1"
                android:layout_width="46dp"
                android:layout_height="match_parent"

                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/home" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="horizontal"

            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/assist_Imageview"
                android:layout_width="330dp"
                android:layout_height="240dp"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:scaleType="centerInside"/>

            <FrameLayout
                android:layout_width="450dp"
                android:layout_height="240dp"
                android:orientation="horizontal"
                android:layout_gravity="right">

                <SurfaceView
                    android:id="@+id/camera_preview"
                    android:layout_width="363dp"
                    android:layout_height="240dp"
                    android:layout_gravity="right"

                    android:layout_marginRight="30dp" />

            </FrameLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <ProgressBar
                android:id="@+id/stt_decibel"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_weight="1"

                android:max="120"
                android:progress="5"

                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"

            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            >

            <TableRow
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <ImageButton
                    android:id="@+id/bt_rstart"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"

                    app:srcCompat="@drawable/practicestart" />

                <ImageButton
                    android:id="@+id/bt_rstop"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"

                    app:srcCompat="@drawable/practicecomplete" />

                <ImageButton
                    android:id="@+id/mtResult1"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"

                    app:srcCompat="@drawable/result" />
            </TableRow>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>