<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="543dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/practice1" />

            <ImageButton
                android:id="@+id/mtMain1"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="226dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/learning_View"
                    android:layout_width="371dp"
                    android:layout_height="226dp"
                    android:text="학습 영상 영역" />

                <VideoView
                    android:id="@+id/video_View"
                    android:layout_width="357dp"
                    android:layout_height="226dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/voicehight"
                android:layout_width="701dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/voicebar" />
        </LinearLayout>

        <TableRow
            android:layout_width="306dp"
            android:layout_height="match_parent"
            android:layout_gravity="right">

            <Button
                android:id="@+id/bt_rstart"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="연습 시작" />

            <Button
                android:id="@+id/bt_rstop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연습 멈춤" />

            <Button
                android:id="@+id/mtResult1"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:text="결과보기" />
        </TableRow>
    </LinearLayout>

</LinearLayout>