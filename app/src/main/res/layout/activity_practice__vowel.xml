<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Practice_Vowel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="543dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/practice1" />

            <ImageButton
                android:id="@+id/mtMain1"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/home" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="650dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pvowel_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"

                android:layout_gravity="left"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/a_bt2" />

            <ImageButton
                android:id="@+id/pvowel_eo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/eo_bt2" />

            <ImageButton
                android:id="@+id/pvowel_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"

                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/u_bt2" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="650dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"

            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pvowel_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"

                android:layout_gravity="left"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/o_bt2" />

            <ImageButton
                android:id="@+id/pvowel_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/i_bt" />

            <ImageButton
                android:id="@+id/pvowel_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"

                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/e_bt2" />


        </FrameLayout>

    </LinearLayout>

</LinearLayout>